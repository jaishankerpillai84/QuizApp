<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".QuizActivityFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="QuizName"
        android:id="@+id/quizName"
        android:layout_marginTop="@dimen/abc_text_size_medium_material"
        android:layout_marginBottom="@dimen/abc_text_size_medium_material"
        android:padding="@dimen/abc_text_size_medium_material"
        android:gravity="center"
        android:textColor="@color/textColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/timeLabel"
        android:layout_gravity="right"
        android:textColor="@color/textColor"
        android:textSize="@dimen/abc_text_size_medium_material"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quiz question"
        android:id="@+id/quizQuestion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/abc_text_size_button_material"
        android:padding="@dimen/abc_text_size_button_material"
        android:textColor="@color/textColor" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice1"
        android:id="@+id/choice1"
        android:layout_below="@+id/quizQuestion"
        android:background="@color/foregroundColor"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice2"
        android:id="@+id/choice2"
        android:layout_margin="@dimen/quiz_choice_padding"
        android:layout_below="@+id/choice1"
        android:background="@color/foregroundColor"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice3"
        android:id="@+id/choice3"
        android:layout_margin="@dimen/quiz_choice_padding"
        android:layout_centerVertical="true"
        android:background="@color/foregroundColor"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choice4"
        android:id="@+id/choice4"
        android:layout_margin="@dimen/quiz_choice_padding"
        android:layout_below="@+id/choice3"
        android:background="@color/foregroundColor"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select New Quiz"
        android:id="@+id/newQuiz"
        android:background="@color/foregroundColor"
        android:textColor="@color/textColor"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

</LinearLayout>
